{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "preserve",
    "skipLibCheck": true,
    // language environment
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["es2015", "esnext", "dom", "es2016", "es2017"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"],
      "@@/*": ["*"],
      "~~/*": ["*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "allowJs": false,
    // build environment
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    // decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    //lint
    "strict": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "noEmitHelpers": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": [
  ]
}
